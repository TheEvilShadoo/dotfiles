#!/bin/sh

# A dmenu wrapper script for system functions.
export WM="dwm"
export ctl="loginctl"

wmpid(){ # This function is needed if there are multiple instances of the window manager.
	tree="$(pstree -ps $$)"
	tree="${tree#*$WM(}"
	echo "${tree%%)*}"
}

case "$(printf "ğŸ”’ lock\nğŸšª leave $WM\nâ™»ï¸ renew $WM\nğŸ”ƒ reboot\nğŸ–¥ï¸shutdown\nğŸ“º display off" | dmenu -i -p 'Action: ')" in
	'ğŸ”’ lock') xscreensaver-command -lock ;;
	"ğŸšª leave $WM") killall dwmblocks & kill -TERM "$(wmpid)" ;;
	"â™»ï¸ renew $WM") killall steam; kill -HUP "$(wmpid)" ;;
	'ğŸ”ƒ reboot') $ctl reboot -i ;;
	'ğŸ–¥ï¸shutdown') $ctl poweroff -i ;;
	'ğŸ“º display off') xset dpms force off ;;
	*) exit 1 ;;
esac
